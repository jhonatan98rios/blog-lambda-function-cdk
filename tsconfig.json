{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "opt/nodejs/infra/PostRepository": ["lambda/posts/layers/postsLayer/nodejs/infra/PostRepository"],
      "opt/nodejs/infra/connection": ["lambda/posts/layers/postsLayer/nodejs/infra/connection"],
      "opt/nodejs/infra/dotenv": ["lambda/posts/layers/postsLayer/nodejs/infra/dotenv"],
      "opt/nodejs/domain/Post": ["lambda/posts/layers/postsLayer/nodejs/domain/models/Post"],
      "opt/nodejs/domain/AbstractPostRepository": ["lambda/posts/layers/postsLayer/nodejs/domain/repositories/AbstractPostRepository"],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ],
}
